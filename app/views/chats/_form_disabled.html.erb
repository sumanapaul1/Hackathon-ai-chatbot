<div class="flex items-center justify-between w-full space-x-3 p-3 bg-gray-50 rounded-lg border border-gray-200">
  <div class="flex-1">
    <textarea 
      class="w-full h-12 resize-none rounded-lg border border-gray-300 px-4 py-3 text-sm text-gray-500 bg-gray-100 cursor-not-allowed" 
      placeholder="This conversation has been completed. Start a new chat to continue..."
      disabled
      rows="1"></textarea>
  </div>
  <button 
    disabled
    class="flex-shrink-0 inline-flex items-center justify-center rounded-lg text-sm font-medium text-gray-400 bg-gray-200 cursor-not-allowed h-12 px-6 py-2">
    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
    </svg>
    Disabled
  </button>
</div>

<!-- Action buttons for closed chat -->
<div class="mt-4 p-4 bg-white border border-gray-200 rounded-lg">
  <div class="text-center">
    <p class="text-sm text-gray-600 mb-4">Need help with something else?</p>
    <div class="flex flex-col sm:flex-row gap-3 justify-center">
      <%= button_to "Start New Chat", chats_path, 
          method: :post, 
          class: "bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-lg transition duration-200 border-0 flex-1 sm:flex-none",
          form: { class: "inline-block" } %>
      <a href="tel:+1234567890" class="bg-green-600 hover:bg-green-700 text-white font-semibold py-2 px-4 rounded-lg transition duration-200 inline-flex items-center justify-center flex-1 sm:flex-none">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
        </svg>
        Call Us
      </a>
    </div>
  </div>
</div> 