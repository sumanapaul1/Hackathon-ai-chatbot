<%= form_with model: chat.submissions.build, url: chat_submissions_path(chat), id: "chat_form", class: "flex items-center gap-4 p-4 bg-white border-t" do |f| %>
  <%= f.text_field :input, id: "message-input", autocomplete: "off", placeholder: "Type your message...", style: "padding-right: 330px;", class: "flex-1 rounded-full border border-gray-300 px-6 py-4 text-base focus:outline-none focus:ring-2 focus:ring-blue-400 shadow-sm" %>
  <%= f.submit "Send", id: "send-button", class: "rounded-full !bg-blue-600 !text-white px-8 py-4 text-base font-semibold hover:!bg-blue-700 transition border-0 shadow" %>
<% end %>
