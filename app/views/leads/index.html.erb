<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="text-center mb-8">
      <h1 class="text-3xl font-bold text-gray-900 mb-4">Lead Management</h1>
      <p class="text-lg text-gray-600">Track and manage leads from Voice Calls and Web Chat</p>
    </div>

    <!-- Statistics Dashboard -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-4">
      <div class="bg-white rounded-lg shadow p-6 text-center">
        <div class="text-3xl font-bold text-blue-600"><%= @stats[:total_leads] %></div>
        <div class="text-sm text-gray-600">Total Leads</div>
      </div>
      <div class="bg-white rounded-lg shadow p-6 text-center">
        <div class="flex items-center justify-center mb-2">
          <svg class="w-6 h-6 text-purple-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
          </svg>
        </div>
        <div class="text-3xl font-bold text-purple-600"><%= @stats[:voice_calls] %></div>
        <div class="text-sm text-gray-600">Voice Calls</div>
      </div>
      <div class="bg-white rounded-lg shadow p-6 text-center">
        <div class="flex items-center justify-center mb-2">
          <svg class="w-6 h-6 text-blue-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
          </svg>
        </div>
        <div class="text-3xl font-bold text-blue-600"><%= @stats[:chat_leads] %></div>
        <div class="text-sm text-gray-600">Web Chat</div>
      </div>
      <div class="bg-white rounded-lg shadow p-6 text-center">
        <div class="text-3xl font-bold text-gray-600"><%= @stats[:avg_lead_score] %></div>
        <div class="text-sm text-gray-600">Avg Score</div>
      </div>
    </div>
    
    <!-- Secondary Statistics -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
      <div class="bg-white rounded-lg shadow p-6 text-center">
        <div class="text-3xl font-bold text-green-600"><%= @stats[:with_email] %></div>
        <div class="text-sm text-gray-600">With Email</div>
      </div>
      <div class="bg-white rounded-lg shadow p-6 text-center">
        <div class="text-3xl font-bold text-red-600"><%= @stats[:hot_leads] %></div>
        <div class="text-sm text-gray-600">ðŸ”¥ Hot Leads (80+)</div>
      </div>
      <div class="bg-white rounded-lg shadow p-6 text-center">
        <div class="text-3xl font-bold text-yellow-600"><%= @stats[:high_score] %></div>
        <div class="text-sm text-gray-600">High Score (60+)</div>
      </div>
      <div class="bg-white rounded-lg shadow p-6 text-center">
        <div class="text-3xl font-bold text-orange-600"><%= @stats[:with_appointments] %></div>
        <div class="text-sm text-gray-600">With Appointments</div>
      </div>
    </div>

    <!-- Filters -->
    <div class="bg-white rounded-lg shadow p-6 mb-8">
      <h3 class="text-lg font-semibold text-gray-900 mb-4">Filters</h3>
      
      <!-- Source Filters -->
      <div class="mb-4">
        <h4 class="text-sm font-medium text-gray-700 mb-2">By Source</h4>
        <div class="flex flex-wrap gap-3">
          <%= link_to "All Sources", leads_path, 
              class: "inline-flex items-center px-4 py-2 rounded-lg #{params.except(:voice_calls, :chat_leads).empty? ? 'bg-blue-600 text-white' : 'bg-gray-200 text-gray-700'} transition duration-200" %>
          <%= link_to leads_path(voice_calls: true), 
              class: "inline-flex items-center px-4 py-2 rounded-lg #{params[:voice_calls] ? 'bg-purple-600 text-white' : 'bg-gray-200 text-gray-700'} transition duration-200" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
            ðŸ“ž Voice Calls
          <% end %>
          <%= link_to leads_path(chat_leads: true), 
              class: "inline-flex items-center px-4 py-2 rounded-lg #{params[:chat_leads] ? 'bg-blue-600 text-white' : 'bg-gray-200 text-gray-700'} transition duration-200" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
            </svg>
            ðŸ’¬ Web Chat
          <% end %>
        </div>
      </div>
      
      <!-- Quality Filters -->
      <div>
        <h4 class="text-sm font-medium text-gray-700 mb-2">By Quality</h4>
        <div class="flex flex-wrap gap-3">
          <%= link_to "With Email", leads_path(with_email: true), 
              class: "px-4 py-2 rounded-lg #{params[:with_email] ? 'bg-green-600 text-white' : 'bg-gray-200 text-gray-700'} transition duration-200" %>
          <%= link_to "ðŸ”¥ Hot Leads (80+)", leads_path(hot_leads: true), 
              class: "px-4 py-2 rounded-lg #{params[:hot_leads] ? 'bg-red-600 text-white' : 'bg-gray-200 text-gray-700'} transition duration-200" %>
          <%= link_to "High Score (60+)", leads_path(high_score: true), 
              class: "px-4 py-2 rounded-lg #{params[:high_score] ? 'bg-yellow-600 text-white' : 'bg-gray-200 text-gray-700'} transition duration-200" %>
          <%= link_to "With Appointments", leads_path(with_appointments: true), 
              class: "px-4 py-2 rounded-lg #{params[:with_appointments] ? 'bg-orange-600 text-white' : 'bg-gray-200 text-gray-700'} transition duration-200" %>
        </div>
      </div>
    </div>

    <!-- Leads List -->
    <div class="bg-white rounded-lg shadow">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-xl font-semibold text-gray-900">Recent Leads</h2>
        <p class="text-sm text-gray-600 mt-1">Generated from voice calls and chat conversations</p>
      </div>
      
      <% if @leads.any? %>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Contact</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Source</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Lead Score</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Interests</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Appointment</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Details</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Created</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @leads.each do |lead| %>
                <tr class="hover:bg-gray-50">
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="flex items-center">
                      <div class="flex-shrink-0 h-10 w-10">
                        <div class="h-10 w-10 rounded-full <%= lead.is_voice_call? ? 'bg-purple-100' : 'bg-blue-100' %> flex items-center justify-center">
                          <% if lead.is_voice_call? %>
                            <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                            </svg>
                          <% else %>
                            <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                            </svg>
                          <% end %>
                        </div>
                      </div>
                      <div class="ml-4">
                        <div class="text-sm font-medium text-gray-900">
                          <%= lead.contact_name || 'Unknown' %>
                        </div>
                        <div class="text-sm text-gray-500">
                          <%= lead.email || 'No email' %>
                        </div>
                        <% if lead.contact_phone %>
                          <div class="text-xs text-gray-400">
                            <%= lead.contact_phone %>
                          </div>
                        <% end %>
                      </div>
                    </div>
                  </td>
                  
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= lead.source_color_class %>">
                      <% if lead.is_voice_call? %>
                        <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                        </svg>
                      <% else %>
                        <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
                        </svg>
                      <% end %>
                      <%= lead.source_display %>
                    </span>
                  </td>
                  
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="flex items-center">
                      <div class="text-sm font-medium text-gray-900"><%= lead.lead_score %></div>
                      <div class="ml-2">
                        <% if lead.lead_score >= 80 %>
                          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">Hot</span>
                        <% elsif lead.lead_score >= 60 %>
                          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">Warm</span>
                        <% else %>
                          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">Cold</span>
                        <% end %>
                      </div>
                    </div>
                  </td>
                  
                  <td class="px-6 py-4">
                    <div class="text-sm text-gray-900">
                      <% if lead.interests.any? %>
                        <% lead.interests.first(3).each do |interest| %>
                          <span class="inline-flex items-center px-2 py-1 rounded-md text-xs font-medium bg-blue-100 text-blue-800 mr-1 mb-1">
                            <%= interest %>
                          </span>
                        <% end %>
                        <% if lead.interests.count > 3 %>
                          <span class="text-xs text-gray-500">+<%= lead.interests.count - 3 %> more</span>
                        <% end %>
                      <% else %>
                        <span class="text-sm text-gray-500">None specified</span>
                      <% end %>
                    </div>
                  </td>
                  
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    <% if lead.has_appointment? %>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                        <%= lead.appointment_status&.titleize || 'Requested' %>
                      </span>
                    <% else %>
                      <span class="text-gray-500">None</span>
                    <% end %>
                  </td>
                  
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <% if lead.is_voice_call? %>
                      <div><%= lead.message_count %> messages</div>
                      <% if lead.transcription_sid %>
                        <div class="text-xs">ID: <%= lead.transcription_sid[0..15] %>...</div>
                      <% end %>
                      <div class="text-xs text-purple-600">Voice Assistant</div>
                    <% else %>
                      <div><%= lead.message_count %> messages</div>
                      <div><%= lead.chat_duration_minutes.round(1) %> min</div>
                      <% if lead.chat&.id %>
                        <div class="text-xs">Chat #<%= lead.chat.id %></div>
                      <% end %>
                    <% end %>
                  </td>
                  
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <%= time_ago_in_words(lead.created_at) %> ago
                  </td>
                  
                  <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                    <%= link_to "View", lead_path(lead), class: "text-blue-600 hover:text-blue-900" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="text-center py-12">
          <div class="inline-flex items-center justify-center w-16 h-16 bg-gray-100 rounded-full mb-4">
            <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-medium text-gray-900 mb-2">No leads yet</h3>
          <p class="text-gray-600 mb-6">Leads will appear here from voice calls and completed chat conversations</p>
          <%= link_to "Go to Chats", chats_path, class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-6 rounded-lg transition duration-200" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
